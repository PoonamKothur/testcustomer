{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [ "error", "unix" ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ],
    "indent": [ "error", 2, { "SwitchCase": 1 } ],
    "lines-between-class-members": [ "error", "always" ],
    "no-unused-vars": ["warn", { "args": "none", "ignoreRestSiblings": true }],
    "no-undef": 1,
    "no-dupe-keys": "error",
    "no-const-assign": "warn",
    "no-this-before-super": "warn",
    "no-unreachable": "warn",
    "constructor-super": "warn",
    "valid-typeof": "warn",
    "space-before-blocks": "warn",
    "spaced-comment": "warn"
  },
  "globals": {
    "describe": true,
    "test": true,
    "expect": true,
    "afterEach": true,
    "beforeEach": true,
    "afterAll": true,
    "beforeAll": true
  }
}
